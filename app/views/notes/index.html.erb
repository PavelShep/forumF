<h1 class="flex-center">Notes</h1>
<div class="columns">
  <div class="column is-12">
    <h2 class="flex-center">Welcome&nbsp;<span class="main-color"><%= current_user.nickname %></span></h2>
  </div>
</div>

<div class="columns">
  <div class="column is-12 flex-center">
    <%= link_to "New note", new_note_path, class: 'button main-color' %>
  </div>
</div>

<div id="notes">
  <% @notes.each do |note| %>
    <%= render note %>
  <% end %>
</div>
