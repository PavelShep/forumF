<%= form_with model: note do |form| %>
  <div>
    <%= form.label :title %><br>
    <%= form.text_field :title %>
    <% note.errors.full_messages_for(:title).each do |message| %>
      <div class="error"><%= message %></div>
    <% end %>
  </div>

  <div>
    <%= form.label :body %><br>
    <%= form.rich_text_area :body %><br>
    <% note.errors.full_messages_for(:body).each do |message| %>
      <div class="error"><%= message %></div>
    <% end %>
  </div>

  <div>
    <%= form.label :status %><br>
    <%= form.select :status, %w(public private archived), selected: "public" %>
  </div>

  <div>
    <%= form.submit %>
  </div>
<% end %>

