<%= form_with model: note do |form| %>
  <div class="columns">
    <div class="column is-12">
      <%= form.label :title %><br>
      <%= form.text_field :title, class: 'input' %>
      <% note.errors.full_messages_for(:title).each do |message| %>
        <div class="error"><%= message %></div>
      <% end %>
    </div>
  </div>

  <div class="columns">
    <div class="column is-12">
      <%= form.label :body %><br>
      <%= form.rich_text_area :body %><br>
      <% note.errors.full_messages_for(:body).each do |message| %>
        <div class="error"><%= message %></div>
      <% end %>
    </div>
  </div>

  <div class="columns">
    <div class="column is-6">
      <%= form.label :status %>
    </div>
    <div class="column is-6 flex-right is-marginless">
      <div class="select">
        <%= form.select :status, %w(public private archived), selected: "public" %>
      </div>
    </div>
  </div>

  <div class="columns">
    <div class="column is-12 flex-right">
      <%= form.submit 'Save', class: 'button is-primary' %>
    </div>
  </div>
<% end %>
