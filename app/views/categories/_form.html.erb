<%= form_with model: category do |form| %>
  <div class="columns">
    <div class="column is-12">
      <div class="columns is-marginless">
        <div class="column is-12 flex-center">
          <%= form.label :name %>
        </div>
      </div>
      <div class="columns is-marginless">
        <div class="column is-12">
          <%= form.text_field :name, class: 'input' %>
        </div>
      </div>
      <div class="columns is-marginless">
        <div class="column is-12 flex-center">
          <%= render(Components::ErrorTagComponent.new(errors: category.errors.full_messages_for(:name))) %>
        </div>
      </div>
    </div>
  </div>

  <div class="columns">
    <div class="column is-12 flex-right">
      <%= form.submit 'Save', class: 'button is-primary' %>
    </div>
  </div>
<% end %>
