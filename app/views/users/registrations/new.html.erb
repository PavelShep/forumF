<h2 class="flex-center">Sign up</h2>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <div class="columns">
    <div class="column is-12 flex-center">
      <%= render "users/shared/error_messages", resource: resource %>
    </div>
  </div>

  <div class="columns">
    <div class="column is-12">
      <div class="columns is-marginless">
        <div class="column is-12 flex-center">
          <%= f.label :nickname %>
        </div>
      </div>
      <div class="columns is-marginless">
        <div class="column is-12 flex-center">
          <%= f.text_field :nickname, autofocus: true, autocomplete: "nickname", value: @nickname %>
        </div>
      </div>
      <% if @errors && @errors["nickname"] %>
        <div class="columns is-marginless">
          <div class="column is-12 flex-center">
            <%= render(Components::ErrorTagComponent.new(errors: @errors["nickname"])) %>
          </div>
        </div>
      <% end %>
    </div>
  </div>

  <div class="columns">
    <div class="column is-12">
      <div class="columns is-marginless">
        <div class="column is-12 flex-center">
          <%= f.label :email %><br/>
        </div>
      </div>
      <div class="columns is-marginless">
        <div class="column is-12 flex-center">
          <%= f.email_field :email, autofocus: false, autocomplete: "email", value: @email %>
        </div>
      </div>
      <% if @errors && @errors["email"] %>
        <div class="columns is-marginless">
          <div class="column is-12 flex-center">
            <%= render(Components::ErrorTagComponent.new(errors: @errors["email"])) %>
          </div>
        </div>
      <% end %>
    </div>
  </div>

  <div class="columns">
    <div class="column is-12">
      <div class="columns is-marginless">
        <div class="column is-12 flex-center">
          <%= f.label :password %>&nbsp;
          <% if @minimum_password_length %>
            <em>(<%= @minimum_password_length %> characters minimum)</em>
          <% end %>
        </div>
      </div>
      <div class="columns is-marginless">
        <div class="column is-12 flex-center">
          <%= f.password_field :password, autocomplete: "new-password" %>
        </div>
      </div>
      <% if @errors && @errors["password"] %>
        <div class="columns is-marginless">
          <div class="column is-12 flex-center">
            <%= render(Components::ErrorTagComponent.new(errors: @errors["password"])) %>
          </div>
        </div>
      <% end %>
    </div>
  </div>

  <div class="columns">
    <div class="column is-12">
      <div class="columns is-marginless">
        <div class="column is-12 flex-center">
          <%= f.label :password_confirmation %>
        </div>
      </div>
      <div class="columns is-marginless">
        <div class="column is-12 flex-center">
          <%= f.password_field :password_confirmation, autocomplete: "new-password" %>
        </div>
      </div>
      <% if @errors && @errors["password_confirmation"] %>
        <div class="columns is-marginless">
          <div class="column is-12 flex-center">
            <%= render(Components::ErrorTagComponent.new(errors: @errors["password_confirmation"])) %>
          </div>
        </div>
      <% end %>
    </div>
  </div>

  <div class="columns">
    <div class="column is-12 flex-center">
      <div class="actions">
        <%= f.submit "Sign up", class: 'button' %>
      </div>
    </div>
  </div>
<% end %>

<div class="columns">
  <div class="column is-12 flex-center">
    <%= render "users/shared/links" %>
  </div>
</div>
